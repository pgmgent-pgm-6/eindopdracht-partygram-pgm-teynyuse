{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@shared/*": ["src/components/Shared/*"],
      "@design/*": ["src/components/Design/*"],
      "@core/*": ["src/core/*"],
      "@style": ["src/style/index.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}